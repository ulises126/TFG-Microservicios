@model AplicacionWebTFG.Models.Valoracion
@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>@Model.tituloPublicacion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="comentario" class="control-label"></label>
                <input asp-for="comentario" class="form-control" maxlength="512"/>
                <span asp-validation-for="comentario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="puntuacion" class="control-label"></label>
                <input asp-for="puntuacion" type="number" class="form-control" min="1" max="5" step="0.5"/>
                <span asp-validation-for="puntuacion" class="text-danger"></span>
            </div>
            <input asp-for="idPublicacion" value="@Model.valoracionIdentity.idPublicacion" type="hidden"/>
            <input asp-for="usuarioConsumidor" value="@Model.valoracionIdentity.usuarioConsumidor" type="hidden"/>
            <div class="form-group">
                <input type="submit" value="Añadir valoración" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


